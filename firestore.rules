rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isVerifiedOwner(uid) {
      return isOwner(uid) && request.auth.token.email_verified == true;
    }
    
    // Check for specific admin email for security
    function isAdmin() {
       return request.auth.token.email == "aryan@evotyindia.me";
    }

    // --- NEW: Blog Posts Collection ---
    // - Public can read all blogs
    // - Only the Admin can create/edit/delete
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- EXISTING RULES ---

    // Users Collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.uid);
      allow update: if isVerifiedOwner(resource.data.uid);
      allow delete: if isVerifiedOwner(resource.data.uid);
    }

    // Usernames Collection
    match /usernames/{username} {
      allow read: if true;
      allow create: if isOwner(request.resource.data.uid);
      allow delete: if isOwner(resource.data.uid);
    }

    // Reports Collection
    match /reports/{reportId} {
      allow read: if isOwner(resource.data.uid) || resource.data.isPublic == true;
      allow create: if isVerifiedOwner(request.resource.data.uid);
      allow update, delete: if isVerifiedOwner(resource.data.uid);
    }
  }
}
