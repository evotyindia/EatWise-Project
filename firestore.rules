
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection ---
    // Users can only manage their own profile.
    match /users/{userId} {
      // A user can only create a profile document for their own UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // A user can read, update, or delete their own profile.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

    // --- Usernames Collection ---
    // This collection ensures usernames are unique.
    match /usernames/{username} {
      // Anyone can check if a username exists. This is safe and necessary for the signup form.
      allow get: if true;
      
      // A user can only create a username document that points to their own UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
      
      // A user can only delete their own username reservation.
      // This is important when an account is deleted.
      allow delete: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Usernames cannot be updated to point to a different user.
      allow update: if false;
    }

    // --- Reports Collection ---
    // Manages user-generated health reports, recipes, etc.
    match /reports/{reportId} {
      // PUBLIC READ: Anyone (even unauthenticated users) can read a report if `isPublic` is true.
      allow get: if resource.data.isPublic == true;
      
      // PRIVATE READ: An authenticated user can read any of their own reports, regardless of public status.
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;

      // WRITE PERMISSIONS (Create, Update, Delete)
      // Only the authenticated owner of a report can create, update, or delete it.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}
